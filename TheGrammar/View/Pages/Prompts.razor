@page "/prompts"
@using TheGrammar.View.Components;


<MudText Typo="Typo.h6" Style="padding-bottom: 25px">Prompt Key Bindings</MudText>

<CascadingValue Value="PromptService">
     <MudCard>
        <MudCardContent>
             <PromptView Prompts="@prompts"></PromptView>
        </MudCardContent>

     <MudCardActions>
            <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Add" OnClick="AddPrompt" IconColor="Color.Secondary" Size="Size.Large">Add new prompt key binding</MudButton>
        </MudCardActions>
     </MudCard>
</CascadingValue>